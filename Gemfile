# Use bootstrap for styling
gem 'bootstrap-sass', '~> 3.3.3'
# Use bootswatch template
gem 'bootswatch-rails', '~> 3.2.4'
gem 'bcrypt', '~> 3.1.10'
gem 'jquery-rails'
gem 'jbuilder', '~> 2.0'
gem 'turbolinks'
# Use omniauth for facebook login
gem 'omniauth', '~> 1.2.2'
