<%= javascript_include_tag "xml_parser" %>

<%= provide(:title, "Browse Brews") %>
<h1 class="text-center">Browse Brews</h1>

<div class="center">
  <%= form_for search_path, method: :get do |f| %>
    <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
    </p>
  <% end %>
</div>

<div class="center jumbotron">
  <% @beers.each do |beer| %>
    <div class="media">
      <div class="media-left">
        <%= link_to "Up", upvote_path(beer), class: "glyphicon glyphicon-chevron-up" %>
        <span class="badge"><%= beer.vote_count %></span>
        <%= link_to "Down", downvote_path(beer), class: "glyphicon glyphicon-chevron-down" %>
        <%= image_tag(avatar_url(beer.user), class: "img-circle") %>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= beer.user.username || beer.user.name %></h4>
        <p>Name: <%= beer.name %> | Style: <%= beer.style %> | OG: <%= beer.og %> | FG: <%= beer.fg %></p>
        <% if logged_in? && beer.beer_xml_file_name %>
          <p><%= link_to("download recipe", download_path(beer)) %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
