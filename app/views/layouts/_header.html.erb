<header class="navbar navbar-default">
  <div class="container">
    <nav>
      <ul class="nav nav-pills">
        <% if current_user %>
          <li><%= link_to "Home", root_path %></li>
          <ul class="nav nav-pills pull-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Logged in as: <strong><%= current_user.name %></strong><span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
                <li class="divider"></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
